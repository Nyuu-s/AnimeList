<UserControl x:ConnectionId='1'
    x:Class="AnimeList.Views.ListDetailsDetailControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">



    <ScrollViewer x:ConnectionId='2'
        Name="ForegroundElement"
        Padding="{StaticResource DetailPageMargin}"
        HorizontalAlignment="Stretch"
        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
        VerticalScrollMode="Enabled"
        IsTabStop="True">
        
        <Grid VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                
                
                <HyperlinkButton x:ConnectionId='20' Grid.Row="0"
                                 x:Name="Title"
                                                                     
                                                                                  
                                 Style="{ThemeResource TextBlockButtonStyle}"
                                 FontSize="{StaticResource LargeFontSize}"
                                
                                 ></HyperlinkButton>
             
                <StackPanel Grid.Row="1" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Top" Orientation="Horizontal" >
                    
                    <Image x:ConnectionId='21' x:Name="testImg"  Source="https://cdn.myanimelist.net/images/anime/2/35633.jpg"
                           Height="400"
                           Width="400" ></Image>

                    <WebView x:ConnectionId='22' Visibility="Collapsed"
                             x:Name="webView1"
                                                                         
                             />
                </StackPanel>
            </Grid>
            <Grid Grid.Column="1">
                <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Margin="50">

                    <StackPanel x:ConnectionId='3' Name="block"  >
                        <TextBlock Style="{StaticResource DetailSubTitleStyle}" Text="Nome" />
                        <TextBlock x:ConnectionId='4' Style="{StaticResource DetailBodyBaseMediumStyle}"                                                />
                        <TextBlock
                    Margin="{StaticResource SmallTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="Genere" />
                        <TextBlock x:ConnectionId='5' Style="{StaticResource DetailBodyBaseMediumStyle}"                                                 />
                        <TextBlock
                    Margin="{StaticResource SmallTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="Tipo" />
                        <TextBlock x:ConnectionId='6' Style="{StaticResource DetailBodyBaseMediumStyle}"                                                />
                        <TextBlock
                    Margin="{StaticResource SmallTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="Anno" />
                        <TextBlock x:ConnectionId='7' Style="{StaticResource DetailBodyBaseMediumStyle}"                                                />
                        <TextBlock
                    Margin="{StaticResource SmallTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="Lingua" />
                        <TextBlock x:ConnectionId='8' Style="{StaticResource DetailBodyBaseMediumStyle}"                                                    />

                        <TextBlock
                    Margin="{StaticResource MediumTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="Gruppo" />
                        <TextBlock x:ConnectionId='9' Style="{StaticResource DetailBodyBaseMediumStyle}"                                                  />

                        <TextBlock
                    Margin="{StaticResource MediumTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="Viste" />
                        <TextBlock x:ConnectionId='10' Style="{StaticResource DetailBodyBaseMediumStyle}"                                                     />

                        <TextBlock
                    Margin="{StaticResource MediumTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="Scariate" />
                        <TextBlock x:ConnectionId='11' Style="{StaticResource DetailBodyBaseMediumStyle}"                                                        />

                        <TextBlock
                    Margin="{StaticResource MediumTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="Visto" />
                        <TextBlock x:ConnectionId='12' Style="{StaticResource DetailBodyBaseMediumStyle}"                                                      />

                        <TextBlock
                    Margin="{StaticResource MediumTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="Dwn" />
                        <TextBlock x:ConnectionId='13' Style="{StaticResource DetailBodyBaseMediumStyle}"                                               />

                        <TextBlock
                    Margin="{StaticResource MediumTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="Voto" />
                        <TextBlock x:ConnectionId='14' Style="{StaticResource DetailBodyBaseMediumStyle}"                                                   />

                        <TextBlock
                    Margin="{StaticResource MediumTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="Supporti" />
                        <TextBlock x:ConnectionId='15' Style="{StaticResource DetailBodyBaseMediumStyle}"                                                     />

                        <TextBlock
                    Margin="{StaticResource MediumTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="Supporto" />
                        <TextBlock x:ConnectionId='16' Style="{StaticResource DetailBodyBaseMediumStyle}"                                                 />

                        <TextBlock
                    Margin="{StaticResource MediumTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="Risoluzione" />
                        <TextBlock x:ConnectionId='17' Style="{StaticResource DetailBodyBaseMediumStyle}"                                                      />

                        <TextBlock
                    Margin="{StaticResource MediumTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="Cover" />
                        <TextBlock x:ConnectionId='18' Style="{StaticResource DetailBodyBaseMediumStyle}"                                                 />

                        <TextBlock
                    Margin="{StaticResource MediumTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="Note" />
                        <TextBlock x:ConnectionId='19' Style="{StaticResource DetailBodyBaseMediumStyle}"                                                />
                    </StackPanel>
                </StackPanel>
            </Grid>
            
     
        </Grid>
       
    </ScrollViewer>
</UserControl>

